install_dnf () {
    local pkg=${1:-python3}
    dnf update -y
    dnf install -y $pkg
    dnf clean all
}

install_yum () {
    local pkg=${1:-python3}
    yum update -y
    yum install -y $pkg
    yum clean all
}

install_ubi8 () {
    install_dnf python36
}

install_apk () {
    local pkg=${1:-python3}
    apk update
    apk upgrade
    apk add $pkg
    rm -rf /var/cache/apk/*
}

install_alpine() {
    install_apk
}

install_apt_get () {
    local pkg=${1:-python3}
    apt-get update -y
    apt-get upgrade -y
    apt-get install -y $pkg
    apt-get clean -y
}

install_ubuntu () {
    install_apt_get
}

install_pacman () {
    pacman -S -y
    pacman -S --noconfirm python
}

install_archlinux () {
    install_pacman
}

install_fedora () {
    install_dnf
}

install_debian () {
    install_apt_get
}

install_centos () {
    local ver=$1
    if [ "$ver" -gt "7" ];
    then
        install_dnf
    else
        install_yum
    fi
}
